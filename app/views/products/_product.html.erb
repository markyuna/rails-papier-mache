<div class="container margin-top-negative">
  <div class="card">
    <div id="<%= dom_id product %>">
     <% if @product.photo.attached? %>
      <%= cl_image_tag @product.photo.key, class: 'show-image' %>
      <% else %>
      <%= image_tag("unknown.jpg", class:"show-image") %>
     <% end %>
    </div>

    <div class="col-8">
      <div class="product-show-card">
        <h1><%= @product.title %></h1>
        <p class="product-show-address"><%= @product.address %></p>
      </div>
      <div class="product-show-card">
        <p><strong>Description: </strong><%= @product.description %></p>
        <p><strong>Prix ​​par jour: </strong><%= @product.price %> €</p>
        <p><strong>Stock: </strong><%= @product.stock %> piéces</p>

        <% if @product.status? %>
          <p class="card-text text-success"><strong>Disponible</strong></p><br>
        <% else %>
          <p class="card-text"><strong>Indisponible</strong></p><br>
        <% end %>
        <%= link_to "Louer", "/products/#{params[:id]}/bookings/new", class: "btn btn-info" %>

      </div>
      <div class="col-8">
        <div class="product-show-card">
          <h5>Louer cette belle pieces!</h5>

          <div class="container property-booking-tool">
            <div class="booking-tool-header">

              <h2 class="p-0 my-3">Make a booking:</h2>
              <div class="price-header">
                 <p class="text-success"> <%= number_to_currency(@product.price, unit: "£", precision: 0) %> / night </p>
              </div>
            </div>
            <div class="dates w-100 pb-2">
              <%= render 'bookings/form', booking: Booking.new, property: @property %>
            </div>
          </div>
        </div>
        </div>

        <div class="product-show-card">
          <div class="flex-align">
           <hr>
           <div>
            <%= link_to "Edit this product", edit_product_path(@product) %> |
            <%= link_to "Back to products", products_path %>
            <%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger" %>
           </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <h6 class="no-mb">Share</h6>
  <div class="flex">
    <i class="fa-brands fa-facebook-square me-2"></i>
    <i class="fa-brands fa-twitter-square me-2"></i>
    <i class="fa-brands fa-pinterest-square me-2"></i>
  </div>
</div>
