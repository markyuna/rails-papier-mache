<div class="container pt-5 md-5">
<div class="row justify-content-center">
  <div class="col-12 col-sm-4">
   <div class="form-login">

<h2>Connexion</h2>
<h6>Si vous n'avez pas encore créé de compte, merci de vous
<%= link_to "registration", new_registration_path(resource_name) %> au préalable.</h6>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
data: {turbo: false}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "CONEXION", class: 'btn btn-outline-primary rounded-pill' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

   </div>
  </div>
 </div>
</div>
